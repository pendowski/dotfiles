[user]
	name = Jaroslaw Pendowski
	email = jarek@pendowski.com

[color]
	ui = auto

[core]
	editor = pico
	excludesfile = ~/.gitignore_global

[alias]
	st = status
	co = checkout
	cia = commit -a
	cp = cherry-pick
	ps = push
	pl = pull
	pod = !git checkout develop && git pull
	rod = !git checkout develop && git pull && git checkout - && git rebase develop
	today = !git log --pretty=oneline --author=`git config user.email` --since=am
	recent = !git reflog | grep 'checkout: moving from' | awk '{print $NF}' | head -n 25 | sort | uniq
	recent-all = !git reflog | grep 'checkout: moving from' | awk '{print $NF}'

[push]
	default = current
 	followTags = true
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true
[merge]
	tool = Kaleidoscope
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[mergetool]
	prompt = false
[diff]
	tool = Kaleidoscope
